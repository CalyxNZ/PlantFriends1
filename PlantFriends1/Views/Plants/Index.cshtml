@model IEnumerable<PlantFriends1.Models.Plant>

@{
    ViewBag.Title = "Index";
}

<h1>Plants</h1>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<p class=""><a href="/Plants/create" class="btn btn-primary btn-lg">Add New &raquo;</a></p>
<hr />
<div  class="container" style=" background-color: rgba(194,255,255,0.8); border: 1px solid black; border-radius: 5px; box-shadow: rgba(0,0,0,.4) -3px 4px; margin-top: 20px; padding-bottom: 15px; overflow: hidden;">
    
        
    <div style="display: block; ">
        <span style="display: inline-grid; margin: 10px; margin-left:20px; width: 45%;">
            @using (Html.BeginForm("Index", "Plants", FormMethod.Get))
            {
                <label>Category Filter:</label> @Html.DropDownList("Category", "All")
                <input type="submit" value="Filter" />
                <input type="hidden" name="Search" id="Search" value="@ViewBag.Search" />
            }
        </span>
        <span style="display: inline-grid; margin: 10px; margin-right: 20px; width: 45%; justify-content: right;">
            @using (Html.BeginForm("Index", "Plants", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
            {
                <span class="">
                    @Html.TextBox("Search", null, new { @class = "form-control", @placeholder = "Search Plant or Category" })
                </span>
                <button type="submit" class="btn btn-default">Search</button>
            }
        </span>
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Name)*@
                    @Html.ActionLink(item.Name, "Details", "Plants", new { id = item.PlantId }, null)
                    @*<p class=""><a href="@item.PlantId" class="btn btn-primary btn-m">@item.Name &raquo;</a></p>*@

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PlantId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PlantId })
                </td>
            </tr>
        }

    </table>
</div>
<hr />
<div>
    @Html.ActionLink("Back to List", "Index")

</div>
